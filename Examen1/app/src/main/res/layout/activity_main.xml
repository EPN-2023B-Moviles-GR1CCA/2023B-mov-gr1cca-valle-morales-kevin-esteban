<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco_hueso"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView_Vuelo"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:background="@color/blanco_hueso"
        android:text="@string/app_aerolinea_vuelo"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/imagenPrincipal"
        android:layout_width="267dp"
        android:layout_height="334dp"
        android:layout_gravity="center"
        android:src="@drawable/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Vuelo"
        app:layout_constraintVertical_bias="0.191" />

    <Button
        android:id="@+id/botonIrAActividad"
        android:layout_width="139dp"
        android:layout_height="62dp"
        android:onClick="onClickIrAActividad"
        android:text="@string/empezar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenPrincipal" />


</androidx.constraintlayout.widget.ConstraintLayout>